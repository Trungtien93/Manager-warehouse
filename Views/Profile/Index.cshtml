@model MNBEMART.Models.User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="min-h-screen bg-slate-50 p-6 md:p-8 space-y-6 text-slate-700">

    <div class="flex items-center gap-3 mb-6">
        <i class="bi bi-person-circle text-3xl text-blue-600"></i>
        <div>
            <h1 class="text-2xl font-bold text-slate-800">Hồ sơ cá nhân</h1>
            <p class="text-sm text-slate-500">Xem và chỉnh sửa thông tin tài khoản</p>
        </div>
    </div>

    @if (TempData["Msg"] != null)
    {
        <div class="bg-green-50 border border-green-200 text-green-700 text-sm rounded-lg px-4 py-2 mb-3">
            <i class="bi bi-check-circle-fill me-1"></i> @TempData["Msg"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-50 border border-red-200 text-red-700 text-sm rounded-lg px-4 py-2 mb-3">
            <i class="bi bi-exclamation-circle-fill me-1"></i> @TempData["Error"]
        </div>
    }

    <div class="bg-white border border-slate-200 shadow-sm rounded-xl p-6 max-w-3xl">
        <form asp-action="Update" method="post" class="space-y-5">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <div>
                <label class="block text-sm font-medium text-slate-600 mb-1">Tên đăng nhập</label>
                <input type="text" value="@Model.Username" readonly
                       class="w-full border border-slate-200 bg-slate-100 rounded-lg px-3 py-2 text-sm text-slate-600" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-600 mb-1">Họ tên</label>
                <input type="text" name="fullName" value="@Model.FullName"
                       class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <div class="grid md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-slate-600 mb-1">Mật khẩu hiện tại</label>
                    <input type="password" name="currentPassword" placeholder="•••••••"
                           class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-600 mb-1">Mật khẩu mới</label>
                    <input type="password" name="newPassword" placeholder="•••••••"
                           class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
                </div>
            </div>

            <div class="pt-3 flex justify-end gap-3">
                <a asp-controller="Home" asp-action="Dashboard"
                   class="px-4 py-2 rounded-lg text-sm font-medium border border-slate-300 text-slate-700 hover:bg-slate-100 transition">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit"
                        class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg text-sm shadow-sm transition">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>

    <div class="bg-white border border-slate-200 shadow-sm rounded-xl p-6 max-w-3xl">
        <h3 class="text-lg font-semibold text-slate-800 mb-3 flex items-center gap-2">
            <i class="bi bi-building"></i> Kho được truy cập
        </h3>
        <ul class="list-disc ms-6 text-sm text-slate-600">
            @if (Model.UserWarehouses?.Any() ?? false)
            {
                foreach (var uw in Model.UserWarehouses)
                {
                    <li>@uw.Warehouse?.Name</li>
                }
            }
            else
            {
                <li>Chưa được gán kho nào.</li>
            }
        </ul>
    </div>
</div>
