@model MNBEMART.Models.User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    var avatarUrl = !string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/uploads/avarta.png";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100 py-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto space-y-6">
        
        <!-- Header Section -->
        <div class="flex items-center gap-4 mb-8">
            <a asp-controller="Home" asp-action="Dashboard" class="text-slate-600 hover:text-slate-900 transition">
                <i class="bi bi-arrow-left text-2xl"></i>
            </a>
            <div>
                <h1 class="text-3xl font-bold text-slate-900">Hồ sơ cá nhân</h1>
                <p class="text-sm text-slate-500 mt-1">Quản lý thông tin tài khoản và cài đặt</p>
            </div>
        </div>

        <!-- Toast Messages -->
        @if (TempData["Msg"] != null)
        {
            <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 rounded-lg shadow-sm flex items-center gap-3">
                <i class="bi bi-check-circle-fill text-xl"></i>
                <span>@TempData["Msg"]</span>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded-lg shadow-sm flex items-center gap-3">
                <i class="bi bi-exclamation-circle-fill text-xl"></i>
                <span>@TempData["Error"]</span>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            
            <!-- Left Column: Avatar & Basic Info -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6">
                    <!-- Avatar Section -->
                    <div class="flex flex-col items-center">
                        <div id="avatarContainer" class="relative group cursor-pointer mb-4">
                            <div class="w-32 h-32 rounded-full overflow-hidden ring-4 ring-white shadow-xl bg-gradient-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                {
                                    <img id="avatarPreview" src="@Model.AvatarUrl" alt="Avatar" 
                                         class="w-full h-full object-cover" />
                                }
                                else
                                {
                                    <div id="avatarPlaceholder" class="w-full h-full flex items-center justify-center">
                                        <i class="bi bi-person-circle text-white text-6xl"></i>
                                    </div>
                                }
                            </div>
                            
                            <!-- Hover Overlay -->
                            <div id="changeAvatarBtn" class="hidden absolute inset-0 bg-black/50 rounded-full flex items-center justify-center transition-opacity group-hover:opacity-100">
                                <div class="text-white text-center">
                                    <i class="bi bi-camera-fill text-2xl block mb-1"></i>
                                    <span class="text-xs font-medium">Đổi ảnh</span>
                                </div>
                            </div>
                            
                            <!-- Upload Badge -->
                            <div class="absolute -bottom-2 -right-2 bg-blue-600 text-white rounded-full p-2 shadow-lg">
                                <i class="bi bi-check-lg text-sm"></i>
                            </div>
                        </div>

                        <h2 class="text-xl font-bold text-slate-900 mb-1">@(Model.FullName ?? Model.Username)</h2>
                        <p class="text-sm text-slate-500 mb-2">@Model.Username</p>
                        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full text-xs font-medium
                                    @(Model.Role == "Admin" ? "bg-purple-100 text-purple-700" : "bg-blue-100 text-blue-700")">
                            <i class="bi bi-shield-check"></i>
                            @Model.Role
                        </div>
                    </div>

                    <!-- Stats Section -->
                    <div class="mt-6 pt-6 border-t border-slate-200 space-y-3">
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-slate-600">Kho được truy cập</span>
                            <span class="font-semibold text-slate-900">@(Model.UserWarehouses?.Count ?? 0)</span>
                        </div>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-slate-600">Vai trò</span>
                            <span class="font-semibold text-slate-900">@Model.Role</span>
                        </div>
                    </div>
                </div>

                <!-- Warehouses Card -->
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6 mt-6">
                    <h3 class="text-lg font-semibold text-slate-900 mb-4 flex items-center gap-2">
                        <i class="bi bi-building text-blue-600"></i>
                        Kho được truy cập
                    </h3>
                    @if (Model.UserWarehouses?.Any() ?? false)
                    {
                        <ul class="space-y-2">
                            @foreach (var uw in Model.UserWarehouses)
                            {
                                <li class="flex items-center gap-2 text-sm text-slate-700">
                                    <i class="bi bi-check-circle text-green-500"></i>
                                    <span>@uw.Warehouse?.Name</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-sm text-slate-500 italic">Chưa được gán kho nào</p>
                    }
                </div>
            </div>

            <!-- Right Column: Form -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-6">
                    <h3 class="text-xl font-bold text-slate-900 mb-6 flex items-center gap-2">
                        <i class="bi bi-gear text-blue-600"></i>
                        Cài đặt tài khoản
                    </h3>

                    <form asp-action="Update" method="post" enctype="multipart/form-data" class="space-y-6">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <!-- Avatar Upload (Hidden Input) -->
                        <input type="file" id="avatarInput" name="avatarFile" accept="image/*" class="hidden" />

                        <!-- Username -->
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">
                                <i class="bi bi-person me-1"></i>Tên đăng nhập
                            </label>
                            <input type="text" value="@Model.Username" readonly
                                   class="w-full border border-slate-200 bg-slate-50 rounded-xl px-4 py-3 text-sm text-slate-600 cursor-not-allowed" />
                            <p class="text-xs text-slate-500 mt-1">Tên đăng nhập không thể thay đổi</p>
                        </div>

                        <!-- Full Name -->
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">
                                <i class="bi bi-card-heading me-1"></i>Họ và tên
                            </label>
                            <input type="text" name="fullName" value="@Model.FullName" 
                                   class="w-full border border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" 
                                   placeholder="Nhập họ và tên" />
                        </div>

                        <!-- Password Section -->
                        <div class="border-t border-slate-200 pt-6">
                            <h4 class="text-sm font-semibold text-slate-700 mb-4 flex items-center gap-2">
                                <i class="bi bi-lock"></i>
                                Đổi mật khẩu
                            </h4>
                            <p class="text-xs text-slate-500 mb-4">Để trống nếu không muốn đổi mật khẩu</p>
                            
                            <div class="grid md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-600 mb-2">Mật khẩu hiện tại</label>
                                    <div class="relative">
                                        <input type="password" name="currentPassword" placeholder="••••••••" 
                                               class="w-full border border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
                                        <i class="bi bi-eye-slash absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 cursor-pointer" 
                                           onclick="togglePassword(this)"></i>
                                    </div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-600 mb-2">Mật khẩu mới</label>
                                    <div class="relative">
                                        <input type="password" name="newPassword" placeholder="••••••••" 
                                               class="w-full border border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
                                        <i class="bi bi-eye-slash absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 cursor-pointer" 
                                           onclick="togglePassword(this)"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex justify-end gap-3 pt-4 border-t border-slate-200">
                            <a asp-controller="Home" asp-action="Dashboard"
                               class="px-6 py-3 rounded-xl text-sm font-medium border border-slate-300 text-slate-700 hover:bg-slate-50 transition">
                                <i class="bi bi-x-lg me-1"></i>Hủy
                            </a>
                            <button type="submit"
                                    class="px-6 py-3 rounded-xl text-sm font-semibold bg-gradient-to-r from-blue-600 to-blue-700 text-white hover:from-blue-700 hover:to-blue-800 shadow-lg shadow-blue-500/30 transition transform hover:scale-105">
                                <i class="bi bi-check-lg me-1"></i>Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            // Avatar elements
            const avatarContainer = document.getElementById('avatarContainer');
            const avatarInput = document.getElementById('avatarInput');
            const avatarPreview = document.getElementById('avatarPreview');
            const avatarPlaceholder = document.getElementById('avatarPlaceholder');
            const changeAvatarBtn = document.getElementById('changeAvatarBtn');

            // Click avatar to upload
            avatarContainer?.addEventListener('click', function() {
                avatarInput?.click();
            });

            // Show/hide change button on hover
            avatarContainer?.addEventListener('mouseenter', function() {
                changeAvatarBtn?.classList.remove('hidden');
            });

            avatarContainer?.addEventListener('mouseleave', function() {
                changeAvatarBtn?.classList.add('hidden');
            });

            // Avatar preview
            avatarInput?.addEventListener('change', function(e) {
                const file = e.target.files?.[0];
                if (!file) return;

                // Validate file type
                if (!file.type.startsWith('image/')) {
                    alert('Vui lòng chọn file ảnh (JPG, PNG, GIF, WEBP)');
                    return;
                }

                // Validate file size (5MB)
                if (file.size > 5 * 1024 * 1024) {
                    alert('Kích thước file không được vượt quá 5MB');
                    return;
                }

                // Show preview
                const reader = new FileReader();
                reader.onload = function(e) {
                    if (!avatarPreview) {
                        // Create img element if doesn't exist
                        const img = document.createElement('img');
                        img.id = 'avatarPreview';
                        img.src = e.target.result;
                        img.alt = 'Avatar';
                        img.className = 'w-full h-full object-cover';
                        avatarContainer.querySelector('.rounded-full').appendChild(img);
                    } else {
                        avatarPreview.src = e.target.result;
                        avatarPreview.classList.remove('hidden');
                    }
                    if (avatarPlaceholder) avatarPlaceholder.classList.add('hidden');
                };
                reader.readAsDataURL(file);
            });
        })();

        // Toggle password visibility
        function togglePassword(icon) {
            const input = icon.previousElementSibling;
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        }
    </script>
}
