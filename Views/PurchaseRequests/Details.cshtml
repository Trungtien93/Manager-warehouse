@model MNBEMART.Models.PurchaseRequest
@{
    ViewData["Title"] = "Chi tiết đề xuất";
    
    string statusBadge = Model.Status switch
    {
        MNBEMART.Models.PRStatus.Pending => "bg-amber-100 text-amber-800",
        MNBEMART.Models.PRStatus.Approved => "bg-green-100 text-green-800",
        MNBEMART.Models.PRStatus.Ordered => "bg-blue-100 text-blue-800",
        MNBEMART.Models.PRStatus.Cancelled => "bg-red-100 text-red-800",
        _ => "bg-slate-100 text-slate-800"
    };

    string statusText = Model.Status switch
    {
        MNBEMART.Models.PRStatus.Pending => "Chờ duyệt",
        MNBEMART.Models.PRStatus.Approved => "Đã duyệt",
        MNBEMART.Models.PRStatus.Ordered => "Đã đặt hàng",
        MNBEMART.Models.PRStatus.Cancelled => "Đã hủy",
        _ => Model.Status.ToString()
    };
    
    string FQty(decimal v) => (v % 1m == 0m) ? ((long)v).ToString() : v.ToString("0.##");
}

<div class="max-w-[1600px] mx-auto px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h1 class="text-3xl font-black text-slate-900 tracking-tight">
                    Chi tiết đề xuất @Model.RequestNumber
                </h1>
                <p class="text-slate-600 mt-2">
                    Ngày tạo: @Model.RequestDate.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
            <a asp-action="Index" class="bg-slate-600 hover:bg-slate-700 text-white font-medium px-5 py-2.5 rounded-lg transition">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        </div>

        <!-- Status & Actions -->
        <div class="flex items-center gap-4">
            <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-bold @statusBadge">
                @statusText
            </span>
            
            @if (Model.IsAutoGenerated)
            {
                <span class="inline-flex items-center px-4 py-2 rounded-lg text-sm font-bold bg-purple-100 text-purple-800">
                    <i class="bi bi-robot me-2"></i> Tự động tạo
                </span>
            }

            @if (Model.Status == MNBEMART.Models.PRStatus.Pending)
            {
                <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-medium px-5 py-2.5 rounded-lg transition">
                        <i class="bi bi-check-circle me-1"></i> Duyệt
                    </button>
                </form>
                <button type="button" class="bg-red-600 hover:bg-red-700 text-white font-medium px-5 py-2.5 rounded-lg transition"
                        onclick="document.getElementById('rejectModal').classList.remove('hidden')">
                    <i class="bi bi-x-circle me-1"></i> Từ chối
                </button>
            }

            @if (Model.Status == MNBEMART.Models.PRStatus.Approved)
            {
                <form asp-action="MarkOrdered" asp-route-id="@Model.Id" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-medium px-5 py-2.5 rounded-lg transition">
                        <i class="bi bi-cart-check me-1"></i> Đánh dấu đã đặt
                    </button>
                </form>
            }
        </div>
    </div>

    <!-- Request Info Card -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-6">
        <h3 class="text-lg font-bold text-slate-900 mb-4">Thông tin đề xuất</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="text-sm font-semibold text-slate-600">Người tạo</label>
                <p class="text-slate-900">@(Model.RequestedBy?.Username ?? "N/A")</p>
            </div>
            <div>
                <label class="text-sm font-semibold text-slate-600">Ngày tạo</label>
                <p class="text-slate-900">@Model.RequestDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            @if (Model.ApprovedBy != null)
            {
                <div>
                    <label class="text-sm font-semibold text-slate-600">Người duyệt</label>
                    <p class="text-slate-900">@Model.ApprovedBy.Username</p>
                </div>
                <div>
                    <label class="text-sm font-semibold text-slate-600">Ngày duyệt</label>
                    <p class="text-slate-900">@Model.ApprovedDate?.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="md:col-span-2">
                    <label class="text-sm font-semibold text-slate-600">Ghi chú</label>
                    <p class="text-slate-900">@Model.Notes</p>
                </div>
            }
        </div>
    </div>

    <!-- Details Table -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200">
            <h3 class="text-lg font-bold text-slate-900">Chi tiết vật tư (@Model.Details.Count)</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">Mã VT</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">Tên vật tư</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Tồn hiện tại</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Tồn tối thiểu</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">SL đề xuất</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">NCC</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Giá dự kiến</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Thành tiền</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @{
                        decimal totalAmount = 0;
                    }
                    @foreach (var detail in Model.Details)
                    {
                        var amount = detail.RequestedQuantity * (detail.EstimatedPrice ?? 0);
                        totalAmount += amount;
                        
                        string stockWarning = detail.CurrentStock < detail.MinimumStock ? "text-red-600 font-bold" : "text-slate-900";

                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="font-mono text-sm font-semibold text-slate-900">@detail.Material?.Code</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-slate-900">@detail.Material?.Name</div>
                                <div class="text-xs text-slate-500">@detail.Material?.Unit</div>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm @stockWarning">@FQty(detail.CurrentStock)</span>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm text-slate-600">@FQty(detail.MinimumStock)</span>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm font-bold text-blue-600">@FQty(detail.RequestedQuantity)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                @(detail.PreferredSupplier?.Name ?? "-")
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm text-slate-900">@((detail.EstimatedPrice ?? 0).ToString("N0")) đ</span>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm font-bold text-slate-900">@amount.ToString("N0") đ</span>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-slate-100 font-bold">
                    <tr>
                        <td colspan="7" class="px-6 py-4 text-right text-sm text-slate-900">Tổng dự kiến:</td>
                        <td class="px-6 py-4 text-right text-lg text-slate-900">@totalAmount.ToString("N0") đ</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Document Management Section -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mt-6">
        @await Html.PartialAsync("_DocumentManagement", new { DocumentType = "PurchaseRequest", DocumentId = Model.Id } as object)
    </div>
</div>

<!-- Reject Modal -->
<div id="rejectModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-xl shadow-xl max-w-md w-full mx-4">
        <div class="p-6">
            <h3 class="text-xl font-bold text-slate-900 mb-4">Từ chối đề xuất</h3>
            <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-4">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">Lý do từ chối</label>
                    <textarea name="reason" rows="3" required
                              class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-red-500"></textarea>
                </div>
                <div class="flex gap-3">
                    <button type="submit" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-medium px-4 py-2 rounded-lg transition">
                        Từ chối
                    </button>
                    <button type="button" onclick="document.getElementById('rejectModal').classList.add('hidden')"
                            class="flex-1 bg-slate-200 hover:bg-slate-300 text-slate-700 font-medium px-4 py-2 rounded-lg transition">
                        Hủy
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


