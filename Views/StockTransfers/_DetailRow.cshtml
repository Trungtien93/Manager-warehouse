@model MNBEMART.ViewModels.StockTransferDetailVM
@using Microsoft.AspNetCore.Mvc.Rendering

<tr>
  <td>
    @Html.DropDownListFor(
      m => m.MaterialId,
      (IEnumerable<SelectListItem>)ViewData["MaterialOptions"] ?? Enumerable.Empty<SelectListItem>(),
      "-- Chọn vật tư --",
      new { @class = "form-select material-select" }
    )
    <span asp-validation-for="MaterialId" class="text-danger"></span>
  </td>
  <td>
    <!-- ✅ số nguyên, không âm -->
    <input asp-for="Quantity" type="number" min="1" step="1" class="form-control text-end qty-input" />
    <span asp-validation-for="Quantity" class="text-danger"></span>
  </td>
  <td><input asp-for="Unit" class="form-control unit-input" /></td>
  <td><span class="badge text-bg-light border onhand-badge" data-onhand="0">0</span></td>
  <td><input asp-for="Note" class="form-control" /></td>
  <td class="text-center"><button type="button" class="btn btn-sm btn-outline-danger btn-del-row">×</button></td>
</tr>
