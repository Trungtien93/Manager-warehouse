@model List<MNBEMART.Models.StockAdjustment>


@{
        ViewData["Title"] = "Điều chỉnh tồn kho";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<div class="container-fluid py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Phiếu điều chỉnh tồn</h3>
    <a class="btn btn-primary" asp-action="Create">+ Tạo phiếu</a>
  </div>

  <div class="table-responsive">
    <table class="table table-sm table-bordered align-middle">
      <thead class="table-light text-center">
        <tr>
          <th>Số phiếu</th>
          <th>Kho</th>
          <th>Ngày lập</th>
          <th>Người lập</th>
          <th>Trạng thái</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      @foreach (var x in Model)
      {
        <tr>
          <td class="text-nowrap">@x.AdjustNumber</td>
          <td>@x.Warehouse?.Name</td>
          <td>@x.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
          <td>@x.CreatedBy?.FullName</td>
          <td>
            @if (x.Status == MNBEMART.Models.DocumentStatus.Moi)
              { <span class="badge text-bg-warning">Mới</span> }
            else if (x.Status == MNBEMART.Models.DocumentStatus.DaXacNhan)
              { <span class="badge text-bg-success">Đã xác nhận</span> }
          </td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@x.Id">Chi tiết</a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>
