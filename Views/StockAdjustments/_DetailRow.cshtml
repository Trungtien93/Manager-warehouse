@model MNBEMART.Models.StockAdjustmentDetail
@using Microsoft.AspNetCore.Mvc.Rendering

<tr>
  <td>
    @Html.DropDownListFor(m => m.MaterialId,
      (IEnumerable<SelectListItem>)ViewData["MaterialOptions"] ?? Enumerable.Empty<SelectListItem>(),
      "-- Chọn vật tư --",
      new { @class = "form-select material-select" })
  </td>
  <td>
    <span class="badge bg-secondary-subtle text-dark unit-label">—</span>
  </td>
  <td>
    <span class="badge text-bg-light border onhand-badge">—</span>
  </td>
  <td>
    <input asp-for="QuantityDiff" type="number" step="0.001" class="form-control text-end diff-input" placeholder="±0.000" />
  </td>
  <td>
    <input asp-for="Note" class="form-control" />
  </td>
  <td class="text-center">
    <button type="button" class="btn btn-sm btn-outline-danger btn-del-row">×</button>
  </td>
</tr>
