@model IEnumerable<MNBEMART.Models.Stock>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Tồn kho";

    string q = (ViewBag.Q as string) ?? "";
    int? wid = ViewBag.WarehouseId as int?;
    int page = ViewBag.Page as int? ?? 1;
    int pageSize = ViewBag.PageSize as int? ?? 50;
    int totalItems = ViewBag.TotalItems as int? ?? Model.Count();
    int totalPages = ViewBag.TotalPages as int? ?? 1;
    decimal totalQty = ViewBag.TotalQty as decimal? ?? 0m;
    var whOpts = (ViewBag.WarehouseOptions as SelectList) ?? new SelectList(Enumerable.Empty<SelectListItem>());

    string FQty(decimal v) => (v % 1m == 0m) ? ((long)v).ToString() : v.ToString("0.##");
}

<!-- Thêm Tailwind và Bootstrap icons -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="min-h-screen bg-slate-50 text-slate-700 p-8 space-y-8">

    <!-- Header -->
    <div>
        <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
            <i class="bi bi-archive text-blue-600"></i> @ViewData["Title"]
        </h1>
        <p class="text-sm text-slate-500">Tổng hợp số lượng nguyên liệu hiện có trong các kho hàng</p>
    </div>

    <!-- Toolbar -->
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm p-6 space-y-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="text-sm font-medium text-slate-600 mb-1 block">Tìm kiếm</label>
                <input name="q" value="@q"
                       placeholder="Mã / Tên NL / Tên kho..."
                       class="w-full border border-slate-300 rounded-md px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <div>
                <label class="text-sm font-medium text-slate-600 mb-1 block">Kho</label>
                <select name="warehouseId"
                        class="w-full border border-slate-300 rounded-md px-2 py-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                        asp-items="whOpts" onchange="this.form.submit()">
                    <option value="">-- Tất cả kho --</option>
                </select>
            </div>

            <div>
                <label class="text-sm font-medium text-slate-600 mb-1 block">Hiển thị</label>
                <select name="pageSize"
                        class="w-full border border-slate-300 rounded-md px-2 py-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                        onchange="this.form.submit()">
                    @foreach (var s in new[]{20,50,100,200})
                    {
                        <option value="@s" selected="@(pageSize==s?"selected":null)">@s / trang</option>
                    }
                </select>
            </div>

            <div class="flex items-end justify-end gap-2">
                <a href="@Url.Action("Index","Stocks")"
                   class="px-3 py-2 text-sm rounded-md border border-slate-300 text-slate-600 hover:bg-slate-100">Bỏ lọc</a>
                <button class="px-3 py-2 text-sm rounded-md bg-blue-600 text-white hover:bg-blue-700" type="submit">
                    <i class="bi bi-filter"></i> Lọc
                </button>
            </div>
        </form>

        <!-- Mini Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-2">
            <div class="bg-slate-50 border border-slate-200 rounded-md p-4">
                <p class="text-xs text-slate-500">Tổng dòng</p>
                <h4 class="text-lg font-semibold text-slate-800">@totalItems</h4>
            </div>
            <div class="bg-slate-50 border border-slate-200 rounded-md p-4">
                <p class="text-xs text-slate-500">Tổng SL tồn</p>
                <h4 class="text-lg font-semibold text-slate-800">@FQty(totalQty)</h4>
            </div>
        </div>
    </div>

    <!-- Filter Chips -->
    @if (!string.IsNullOrWhiteSpace(q) || wid.HasValue)
    {
        <div class="flex flex-wrap gap-2">
            @if (!string.IsNullOrWhiteSpace(q))
            { <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm">Từ khoá: <b>@q</b></span> }
            @if (wid.HasValue)
            {
                var kw = whOpts.FirstOrDefault(o => o.Value == wid.ToString())?.Text ?? "";
                <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-sm">Kho: <b>@kw</b></span>
            }
        </div>
    }

    <!-- Table -->
    <div class="bg-white border border-slate-200 rounded-lg shadow-sm overflow-x-auto">
        <table class="min-w-full text-sm text-left text-slate-700">
            <thead class="bg-slate-100 text-slate-600 text-xs uppercase">
                <tr>
                    <th class="px-3 py-2 w-1/4">Kho</th>
                    <th class="px-3 py-2 w-[120px]">Mã NL</th>
                    <th class="px-3 py-2 w-1/4">Tên nguyên liệu</th>
                    <th class="px-3 py-2 w-[90px] text-center">ĐVT</th>
                    <th class="px-3 py-2 w-[120px] text-right">Số lượng</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
                @foreach (var s in Model)
                {
                    <tr class="hover:bg-slate-50 transition">
                        <td class="px-3 py-2 font-medium text-slate-800">@s.Warehouse?.Name</td>
                        <td class="px-3 py-2 font-mono text-blue-800">@s.Material?.Code</td>
                        <td class="px-3 py-2">@s.Material?.Name</td>
                        <td class="px-3 py-2 text-center">@s.Material?.Unit</td>
                        <td class="px-3 py-2 text-right font-semibold">
                            @FQty(s.Quantity)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <div class="flex justify-end mt-4">
            <nav class="flex items-center gap-1">
                @{
                    int prev = Math.Max(1, page - 1);
                    int next = Math.Min(totalPages, page + 1);
                    string qs(int p) => Url.Action("Index", new { q = q, warehouseId = wid, page = p, pageSize = pageSize })!;
                }
                <a href="@qs(prev)"
                   class="px-3 py-1 text-sm rounded-md border border-slate-300 text-slate-600 hover:bg-slate-100 @(page==1?"opacity-40 pointer-events-none":"")">&laquo;</a>
                @for (int i = 1; i <= totalPages; i++)
                {
                    <a href="@qs(i)"
                       class="px-3 py-1 text-sm rounded-md border @(i==page?"bg-blue-600 text-white border-blue-600":"border-slate-300 text-slate-600 hover:bg-slate-100")">@i</a>
                }
                <a href="@qs(next)"
                   class="px-3 py-1 text-sm rounded-md border border-slate-300 text-slate-600 hover:bg-slate-100 @(page==totalPages?"opacity-40 pointer-events-none":"")">&raquo;</a>
            </nav>
        </div>
    }
</div>
