@model List<MNBEMART.Models.Document>
@using MNBEMART.Models
@using System.Linq
@{
    ViewData["Title"] = "Quản lý tài liệu";
    dynamic f = ViewBag.Filter;
    DateTime? fromDate = null;
    DateTime? toDate = null;
    
    if (f?.fromDate != null)
    {
        DateTime parsedFrom;
        if (DateTime.TryParse(f.fromDate.ToString(), out parsedFrom))
            fromDate = parsedFrom.Date;
    }
    
    if (f?.toDate != null)
    {
        DateTime parsedTo;
        if (DateTime.TryParse(f.toDate.ToString(), out parsedTo))
            toDate = parsedTo.Date;
    }
    
    // Calculate pagination display
    var page = ViewBag.Page as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 30;
    var totalItems = ViewBag.TotalItems as int? ?? Model.Count();
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var startItem = (page - 1) * pageSize + 1;
    var endItem = Math.Min(page * pageSize, totalItems);
}

<!-- Tailwind + Bootstrap Icons -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="max-w-[1600px] mx-auto px-6 lg:px-8 py-8">
    <!-- Large Header -->
    <div class="mb-6">
        <h1 class="text-4xl font-black text-slate-900 tracking-tight mb-2">
            Quản lý tài liệu
        </h1>
        <p class="text-lg text-slate-600">
            Quản lý và theo dõi tài liệu đính kèm
        </p>
    </div>

    <!-- Toolbar -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 mb-6 p-6">
        <form method="get" class="space-y-4">
            <!-- Search Row -->
            <div class="flex items-center gap-3">
                <div class="relative flex-1 max-w-md">
                    <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                    <input type="text" 
                           name="q" 
                           value="@(f?.q ?? "")" 
                           placeholder="Tìm kiếm tên file, mô tả..."
                           class="w-full pl-10 pr-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" />
                </div>
                <button type="button" class="p-3 border-2 border-slate-300 rounded-xl hover:bg-slate-50 transition">
                    <i class="bi bi-funnel text-slate-600"></i>
                </button>
            </div>

            <!-- Filter Row -->
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                        <i class="bi bi-file-earmark text-green-600"></i>Loại tài liệu
                    </label>
                    @Html.DropDownList("documentType", (SelectList)ViewBag.DocumentTypes, "-- Tất cả --", new { @class = "w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" })
                </div>
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                        <i class="bi bi-tags text-green-600"></i>Phân loại
                    </label>
                    @Html.DropDownList("category", (SelectList)ViewBag.Categories, "-- Tất cả --", new { @class = "w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" })
                </div>
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                        <i class="bi bi-calendar-event text-green-600"></i>Từ ngày
                    </label>
                    <input type="date" class="w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" 
                           name="fromDate" value="@(fromDate?.ToString("yyyy-MM-dd") ?? "")" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                        <i class="bi bi-calendar-check text-green-600"></i>Đến ngày
                    </label>
                    <input type="date" class="w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" 
                           name="toDate" value="@(toDate?.ToString("yyyy-MM-dd") ?? "")" />
                </div>
                <div>
                    <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                        <i class="bi bi-person text-green-600"></i>Người upload
                    </label>
                    @Html.DropDownList("uploadedById", (SelectList)ViewBag.Users, "-- Tất cả --", new { @class = "w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" })
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center gap-3">
                <button type="submit" class="px-5 py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-xl shadow-md hover:shadow-lg transition flex items-center gap-2">
                    <i class="bi bi-funnel-fill"></i> Tìm kiếm
                </button>
                <a href="/DocumentManagement/List" class="px-5 py-3 border-2 border-slate-300 text-slate-700 font-semibold rounded-xl hover:bg-slate-50 transition flex items-center gap-2 no-underline">
                    <i class="bi bi-arrow-clockwise"></i> Đặt lại
                </a>
            </div>
        </form>
    </div>

    <!-- Table -->
    @if (Model != null && Model.Any())
    {
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
            <div class="overflow-x-auto max-h-[600px] relative">
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50 sticky top-0 z-10">
                        <tr>
                            <th class="px-6 py-4 w-12">
                                <input type="checkbox" class="rounded border-slate-300 text-green-600 focus:ring-green-500" id="chkAllDoc" />
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                                Tên file <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                            </th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Loại tài liệu</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Phân loại</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Kích thước</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">Người upload</th>
                            <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                                Ngày upload <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                            </th>
                            <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider w-24">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-200">
                        @{
                            int index = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        }
                        @foreach (var doc in Model)
                        {
                            var fileIcon = "";
                            if (doc.MimeType?.Contains("pdf") == true) fileIcon = "bi-filetype-pdf text-red-600";
                            else if (doc.MimeType?.Contains("image") == true) fileIcon = "bi-filetype-jpg text-blue-600";
                            else if (doc.MimeType?.Contains("excel") == true || doc.MimeType?.Contains("spreadsheet") == true) fileIcon = "bi-filetype-xls text-green-600";
                            else if (doc.MimeType?.Contains("word") == true || doc.MimeType?.Contains("document") == true) fileIcon = "bi-filetype-docx text-blue-600";
                            else fileIcon = "bi-file-earmark text-slate-600";

                            var categoryName = doc.Category switch
                            {
                                DocumentCategory.Invoice => "Hóa đơn",
                                DocumentCategory.Evidence => "Ảnh minh chứng",
                                DocumentCategory.Contract => "Hợp đồng",
                                DocumentCategory.DeliveryNote => "Phiếu giao hàng",
                                DocumentCategory.Other => "Khác",
                                _ => "-"
                            };

                            var categoryBadge = doc.Category switch
                            {
                                DocumentCategory.Invoice => "bg-blue-50 text-blue-700 border border-blue-200",
                                DocumentCategory.Evidence => "bg-cyan-50 text-cyan-700 border border-cyan-200",
                                DocumentCategory.Contract => "bg-green-50 text-green-700 border border-green-200",
                                DocumentCategory.DeliveryNote => "bg-amber-50 text-amber-700 border border-amber-200",
                                DocumentCategory.Other => "bg-slate-50 text-slate-700 border border-slate-200",
                                _ => ""
                            };

                            var documentTypeName = doc.DocumentType switch
                            {
                                "PurchaseRequest" => "Đề xuất đặt hàng",
                                "StockReceipt" => "Phiếu nhập kho",
                                "StockIssue" => "Phiếu xuất kho",
                                "StockTransfer" => "Phiếu chuyển kho",
                                _ => doc.DocumentType
                            };

                            string FormatFileSize(long bytes)
                            {
                                string[] sizes = { "Bytes", "KB", "MB", "GB" };
                                double len = bytes;
                                int order = 0;
                                while (len >= 1024 && order < sizes.Length - 1)
                                {
                                    order++;
                                    len = len / 1024;
                                }
                                return $"{len:0.##} {sizes[order]}";
                            }

                            string GetDocumentUrl()
                            {
                                return doc.DocumentType switch
                                {
                                    "PurchaseRequest" => $"/PurchaseRequests/Details/{doc.DocumentId}",
                                    "StockReceipt" => $"/StockReceipts/Details/{doc.DocumentId}",
                                    "StockIssue" => $"/StockIssues/Details/{doc.DocumentId}",
                                    "StockTransfer" => $"/StockTransfers/Details/{doc.DocumentId}",
                                    _ => "#"
                                };
                            }

                            <tr class="hover:bg-slate-50 transition-colors duration-150">
                                <td class="px-6 py-4">
                                    <input type="checkbox" class="doc-chk rounded border-slate-300 text-green-600 focus:ring-green-500" value="@doc.Id" />
                                </td>
                                <td class="px-6 py-4 text-slate-500 text-sm">@index</td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        <i class="bi @fileIcon text-2xl"></i>
                                        <div>
                                            <div class="font-semibold text-slate-900">@doc.FileName</div>
                                            @if (!string.IsNullOrEmpty(doc.Description))
                                            {
                                                <div class="text-xs text-slate-500 mt-1">@doc.Description</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <a href="@GetDocumentUrl()" class="text-green-600 hover:text-green-700 font-medium transition flex items-center gap-1" target="_blank">
                                        @documentTypeName
                                        <i class="bi bi-box-arrow-up-right text-xs"></i>
                                    </a>
                                </td>
                                <td class="px-6 py-4">
                                    @if (!string.IsNullOrEmpty(categoryBadge))
                                    {
                                        <span class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold @categoryBadge">@categoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-slate-600 text-sm">@FormatFileSize(doc.FileSize)</td>
                                <td class="px-6 py-4 text-slate-700 text-sm">@(doc.UploadedBy?.FullName ?? "Không xác định")</td>
                                <td class="px-6 py-4 text-slate-600 text-sm">@doc.UploadedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="px-6 py-4 text-center">
                                    <div class="relative inline-block">
                                        <button type="button" class="action-menu-btn p-2 hover:bg-slate-100 rounded-lg transition"
                                                data-id="@doc.Id">
                                            <i class="bi bi-three-dots-vertical text-slate-600"></i>
                                        </button>
                                        <div class="action-menu hidden absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-xl border border-slate-200 z-10">
                                            <a href="/DocumentManagement/Download/@doc.Id" 
                                               target="_blank"
                                               class="block w-full text-left px-4 py-2 text-sm text-slate-700 hover:bg-green-50 hover:text-green-700 transition flex items-center gap-2">
                                                <i class="bi bi-download text-green-600"></i> Tải xuống
                                            </a>
                                            <form method="post" 
                                                  action="/DocumentManagement/Delete/@doc.Id" 
                                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa tài liệu này?');"
                                                  class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="documentType" value="@doc.DocumentType" />
                                                <input type="hidden" name="documentId" value="@doc.DocumentId" />
                                                <input type="hidden" name="returnTo" value="list" />
                                                <button type="submit" 
                                                        class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition flex items-center gap-2">
                                                    <i class="bi bi-trash"></i> Xóa
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer Summary and Pagination -->
        <div class="flex items-center justify-between mt-6">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 px-6 py-3 text-sm">
                <span class="text-slate-500">Tổng tài liệu:</span> <b class="text-slate-900">@totalItems</b>
            </div>
            <div class="flex items-center gap-2">
                <div class="text-sm text-slate-600 mr-4">
                    Hiển thị <span class="font-semibold">@startItem-@endItem</span> trong tổng <span class="font-semibold">@totalItems</span>
                </div>
                @if (page > 1)
                {
                    <a href="?page=@(page - 1)&documentType=@(f?.documentType)&category=@(f?.category)&q=@(f?.q)&uploadedById=@(f?.uploadedById)&fromDate=@(f?.fromDate)&toDate=@(f?.toDate)"
                       class="px-4 py-2 text-sm font-semibold text-slate-600 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition">
                        Trước
                    </a>
                }
                else
                {
                    <button disabled class="px-4 py-2 text-sm font-semibold text-slate-400 bg-white border border-slate-200 rounded-lg opacity-50 cursor-not-allowed">
                        Trước
                    </button>
                }
                
                @if (page < totalPages)
                {
                    <a href="?page=@(page + 1)&documentType=@(f?.documentType)&category=@(f?.category)&q=@(f?.q)&uploadedById=@(f?.uploadedById)&fromDate=@(f?.fromDate)&toDate=@(f?.toDate)"
                       class="px-4 py-2 text-sm font-semibold text-white bg-slate-900 rounded-lg hover:bg-slate-800 transition">
                        Tiếp theo
                    </a>
                }
                else
                {
                    <button disabled class="px-4 py-2 text-sm font-semibold text-slate-400 bg-slate-200 rounded-lg opacity-50 cursor-not-allowed">
                        Tiếp theo
                    </button>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="bg-white rounded-2xl shadow-lg border border-slate-200 p-16 text-center">
            <div class="inline-flex items-center justify-center w-24 h-24 rounded-2xl bg-gradient-to-br from-slate-100 to-slate-200 mb-6 shadow-lg">
                <i class="bi bi-file-earmark text-slate-500 text-5xl"></i>
            </div>
            <h3 class="text-2xl font-black text-slate-900 mb-3">Không tìm thấy tài liệu nào</h3>
            <p class="text-slate-600 mb-6 text-lg">Thử thay đổi bộ lọc hoặc tải lên tài liệu mới</p>
            @if (!string.IsNullOrEmpty(f?.q) || f?.documentType != null || f?.category != null)
            {
                <a href="/DocumentManagement/List" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-semibold rounded-xl transition-all shadow-md hover:shadow-lg no-underline">
                    <i class="bi bi-arrow-clockwise"></i>
                    Xóa bộ lọc
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Action menu toggle
        document.querySelectorAll('.action-menu-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const menu = this.nextElementSibling;
                const isHidden = menu.classList.contains('hidden');
                
                // Close all other menus
                document.querySelectorAll('.action-menu').forEach(m => {
                    if (m !== menu) {
                        m.classList.add('hidden');
                    }
                });
                
                // Toggle current menu
                if (isHidden) {
                    menu.classList.remove('hidden');
                } else {
                    menu.classList.add('hidden');
                }
            });
        });

        // Close menus when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.action-menu-btn') && !e.target.closest('.action-menu')) {
                document.querySelectorAll('.action-menu').forEach(menu => {
                    menu.classList.add('hidden');
                });
            }
        });

        // Select all checkbox
        const chkAllDoc = document.getElementById('chkAllDoc');
        const docChks = document.querySelectorAll('.doc-chk');
        if (chkAllDoc) {
            chkAllDoc.addEventListener('change', function() {
                docChks.forEach(x => x.checked = this.checked);
            });
        }

        // Update select all when individual checkboxes change
        docChks.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const allChecked = Array.from(docChks).every(cb => cb.checked);
                const someChecked = Array.from(docChks).some(cb => cb.checked);
                
                if (chkAllDoc) {
                    chkAllDoc.checked = allChecked;
                    chkAllDoc.indeterminate = someChecked && !allChecked;
                }
            });
        });
    </script>
}
