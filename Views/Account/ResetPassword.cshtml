@{
    Layout = null;
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BEMART</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'system-ui', 'sans-serif'] },
                    colors: {
                        primary: { 500: '#2563eb', 600: '#1d4ed8' },
                        slate: {
                            50: '#f8fafc', 100: '#f1f5f9', 200: '#e2e8f0',
                            500: '#64748b', 700: '#334155', 900: '#0f172a'
                        }
                    }
                }
            }
        }
    </script>
</head>

<body class="min-h-screen bg-slate-50 flex flex-col justify-center items-center font-sans text-slate-700">
    <!-- Container -->
    <div class="w-full max-w-md bg-white rounded-2xl shadow-lg border border-slate-200 px-8 py-10">
        <!-- Logo / Title -->
        <div class="text-center mb-8">
            <div class="mx-auto mb-3 flex items-center justify-center w-14 h-14 rounded-xl bg-blue-50 text-blue-600 shadow-inner">
                <i class="bi bi-shield-lock text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-slate-800">Đặt lại mật khẩu</h1>
            <p class="text-sm text-slate-500 mt-1">Nhập mật khẩu mới cho tài khoản của bạn</p>
        </div>

        <!-- Error Messages -->
        @if (ViewBag.Error != null)
        {
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
                <i class="bi bi-exclamation-circle me-2"></i>@ViewBag.Error
            </div>
        }

        <!-- Reset Password Form -->
        <form method="post" action="/Account/ResetPassword" class="space-y-5">
            <input type="hidden" name="token" value="@ViewBag.Token" />
            <input type="hidden" name="email" value="@ViewBag.Email" />

            <div>
                <label for="password" class="block text-sm font-medium text-slate-600 mb-1">Mật khẩu mới</label>
                <input type="password" id="password" name="password"
                       class="w-full rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition p-3 text-sm"
                       placeholder="Nhập mật khẩu mới" required />
                <p class="text-xs text-slate-500 mt-1">Tối thiểu 8 ký tự, có chữ hoa, chữ thường và số</p>
            </div>

            <div>
                <label for="confirmPassword" class="block text-sm font-medium text-slate-600 mb-1">Xác nhận mật khẩu</label>
                <input type="password" id="confirmPassword" name="confirmPassword"
                       class="w-full rounded-lg border border-slate-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition p-3 text-sm"
                       placeholder="Nhập lại mật khẩu" required />
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow-sm transition duration-150">
                Đặt lại mật khẩu
            </button>

            <div class="text-center mt-4 text-sm">
                <a href="/Account/Login" class="text-blue-600 hover:underline font-medium">
                    <i class="bi bi-arrow-left me-1"></i>Quay lại đăng nhập
                </a>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <p class="text-slate-400 text-xs mt-10">
        © @DateTime.Now.Year BEMART – Hệ thống quản lý kho. 
    </p>

    <script>
        document.querySelector('form')?.addEventListener('submit', function(e) {
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password.length < 8) {
                e.preventDefault();
                alert('Mật khẩu phải có ít nhất 8 ký tự');
                return false;
            }
            
            const hasUpper = /[A-Z]/.test(password);
            const hasLower = /[a-z]/.test(password);
            const hasDigit = /[0-9]/.test(password);
            
            if (!hasUpper || !hasLower || !hasDigit) {
                e.preventDefault();
                alert('Mật khẩu phải có ít nhất 1 chữ hoa, 1 chữ thường và 1 số');
                return false;
            }
            
            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Mật khẩu xác nhận không khớp');
                return false;
            }
        });
    </script>
</body>
</html>









































