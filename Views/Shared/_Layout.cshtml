@using System.Security.Claims
@using MNBEMART.Services
@inject IPermissionService PermissionService
@{
    ViewData["Title"] ??= "BEMART";
    var username = User?.Identity?.IsAuthenticated == true
        ? (User.Identity!.Name ?? "Người dùng")
        : "Khách";

    var userRole = User?.FindFirst(ClaimTypes.Role)?.Value ?? "User";
    var isAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
    
    // Pre-check permissions để tránh gọi async nhiều lần
    var userIdStr = User?.FindFirst(ClaimTypes.NameIdentifier)?.Value;
    int? userId = int.TryParse(userIdStr, out var uid) ? uid : null;
    
    var hasMaterials = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Materials", "Read"));
    var hasWarehouses = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Warehouses", "Read"));
    var hasSuppliers = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Suppliers", "Read"));
    var hasReceipts = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Receipts", "Read"));
    var hasIssues = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Issues", "Read"));
    var hasStocks = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Stocks", "Read"));
    var hasLots = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Lots", "Read"));
    var hasTransfers = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Transfers", "Read"));
    var hasPurchaseRequests = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "PurchaseRequests", "Read"));
    var hasReports = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Reports", "Read"));
    var hasUsers = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Users", "Read"));
    var hasRoles = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Roles", "Read"));
    var hasLogs = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Logs", "Read"));
    var hasNotifications = isAdmin || (userId.HasValue && await PermissionService.HasAsync(userId.Value, "Notifications", "Read"));
    
    // Always allow authenticated users to see Documents menu
    // Permission check will be enforced at controller level via RequirePermissionAttribute
    // Force true for now to ensure menu displays
    bool hasDocuments = true;
    
    // Check xem có hiển thị section "Quản trị" không
    var hasAdminSection = hasPurchaseRequests || hasReports || hasUsers || hasRoles || hasLogs || hasNotifications || hasTransfers || hasDocuments;
    
    var langCookie = Context.Request.Cookies["bemart_lang"] ?? "vi";
    var htmlLang = langCookie == "en" ? "en" : "vi";
}
