    // Helper function to get cookie
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
        return null;
    }

    // Helper function to escape HTML
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Listen for SignalR notifications
    window.addEventListener('notificationReceived', function(event) {
        const notification = event.detail;
        // Reload notifications if dropdown is open
        if (notificationDropdown && !notificationDropdown.classList.contains('hidden')) {
            loadNotifications();
        }
        // Show animation
        if (notificationBell) {
            notificationBell.classList.add('animate-pulse');
            setTimeout(() => notificationBell.classList.remove('animate-pulse'), 1000);
        }
    });

    // Update badge every 30 seconds
    setInterval(updateNotificationBadge, 30000);
    
    // Initial update after page load
    setTimeout(updateNotificationBadge, 1000);
