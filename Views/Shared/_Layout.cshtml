<script>
    // Set current user ID for SignalR
    @{
        var currentUserId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    }
    window.currentUserId = @(currentUserId ?? "null");
    // Toggle admin section
    function toggleAdminMenu() {
        const menu = document.getElementById('admin-menu');
        const arrow = document.getElementById('admin-arrow');
        if (menu.classList.contains('max-h-0')) {
            menu.classList.remove('max-h-0');
            menu.classList.add('max-h-screen');
            arrow.classList.add('rotate-180');
        } else {
            menu.classList.add('max-h-0');
            menu.classList.remove('max-h-screen');
            arrow.classList.remove('rotate-180');
        }
    }

    // Dropdown toggle for user avatar menu
    const userAvatarMenu = document.getElementById("user-avatar-menu");
    if (userAvatarMenu) {
        userAvatarMenu.addEventListener("click", function (e) {
            e.stopPropagation();
            const userDropdown = document.getElementById("user-dropdown-menu");
            if (userDropdown) {
                userDropdown.classList.toggle("hidden");
            }
        });
    }
    
    // Close dropdown when clicking outside
    document.addEventListener("click", function (e) {
        if (!e.target.closest("#user-avatar-menu") && !e.target.closest("#user-dropdown-menu")) {
            const userDropdown = document.getElementById("user-dropdown-menu");
            if (userDropdown) {
                userDropdown.classList.add("hidden");
            }
        }
    });

    // Sidebar toggle removed - hamburger menu no longer exists

    // Mobile off-canvas sidebar
    const backdrop = document.getElementById('sidebarBackdrop');
    const mobileBtn = document.getElementById('mobileMenuBtn');
    function openSidebar(){ sidebar.classList.remove('-translate-x-full'); backdrop.classList.remove('hidden'); }
    function closeSidebar(){ sidebar.classList.add('-translate-x-full'); backdrop.classList.add('hidden'); }
    mobileBtn?.addEventListener('click', openSidebar);
    backdrop?.addEventListener('click', closeSidebar);

    // Close on Esc
    document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeSidebar(); });

    // Alt+1 shortcut to go to Dashboard
    document.addEventListener('keydown', function(e) {
        if (e.altKey && e.key === '1') {
            e.preventDefault();
            window.location.href = '/Home/Dashboard';
        }
    });

    // Highlight current nav + auto-expand admin when a child is active
    (function highlightNav() {
        const current = location.pathname.toLowerCase();
        let best = null; let bestLen = -1;
        document.querySelectorAll('aside a').forEach(a => {
            const href = (a.getAttribute('href') || '').toLowerCase();
            if (!href || href === '#') return;
            if (current.startsWith(href) && href.length > bestLen) { best = a; bestLen = href.length; }
        });
        if (best) {
            best.classList.add('active');
            // If active is inside admin menu, ensure it's expanded
            const adminMenu = document.getElementById('admin-menu');
            if (adminMenu && adminMenu.contains(best)) {
                adminMenu.classList.remove('max-h-0');
                adminMenu.classList.add('max-h-screen');
                const arrow = document.getElementById('admin-arrow');
                if (arrow) arrow.classList.add('rotate-180');
            }
        }
    })();

    // Wrap wide tables on small screens
    (function wrapTables(){
        document.querySelectorAll('main table').forEach(t => {
            if (t.closest('.overflow-x-auto')) return;
            const wrap = document.createElement('div');
            wrap.className = 'overflow-x-auto w-100';
            t.parentNode.insertBefore(wrap, t);
            wrap.appendChild(t);
        });
    })();

    // Always show full sidebar by default (no hover-to-reveal)
    document.addEventListener('DOMContentLoaded', () => {
        sidebar.classList.remove('w-20');
        document.querySelectorAll('.nav-text').forEach(el => el.classList.remove('hidden'));
    });

    // ========== PWA Service Worker Registration ==========
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/service-worker.js')
                .then(function(registration) {
                    console.log('ServiceWorker registered:', registration.scope);
                })
                .catch(function(err) {
                    console.log('ServiceWorker registration failed:', err);
                });
        });
    }

    // PWA Install Prompt
    let deferredPrompt;
    window.addEventListener('beforeinstallprompt', (e) => {
        e.preventDefault();
        deferredPrompt = e;
        
        // Show install banner
        const installBanner = document.createElement('div');
        installBanner.id = 'pwa-install-banner';
        installBanner.className = 'fixed bottom-20 right-6 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-3 rounded-xl shadow-2xl z-40 flex items-center gap-3 max-w-sm animate-slide-up';
        installBanner.innerHTML = `
            <i class="bi bi-download text-2xl"></i>
            <div class="flex-1">
                <div class="font-bold text-sm">Cài đặt ứng dụng</div>
                <div class="text-xs opacity-90">Truy cập nhanh như app native</div>
            </div>
            <button id="pwa-install-btn" class="bg-white text-blue-600 px-3 py-1.5 rounded-lg text-sm font-bold hover:bg-blue-50 transition">
                Cài
            </button>
            <button id="pwa-dismiss-btn" class="text-white hover:text-blue-100 text-xl leading-none">×</button>
        `;
        
        document.body.appendChild(installBanner);
        
        document.getElementById('pwa-install-btn').addEventListener('click', async () => {
            installBanner.remove();
            deferredPrompt.prompt();
            const { outcome } = await deferredPrompt.userChoice;
            console.log(`User response: ${outcome}`);
            if (outcome === 'accepted') {
                Toast.success('Đang cài đặt ứng dụng...');
            }
            deferredPrompt = null;
        });
        
        document.getElementById('pwa-dismiss-btn').addEventListener('click', () => {
            installBanner.remove();
        });
    });

    // App installed
    window.addEventListener('appinstalled', () => {
        console.log('PWA installed successfully');
        Toast.success('Ứng dụng đã được cài đặt thành công!');
    });

    // Online/Offline detection
    window.addEventListener('online', () => {
        Toast.success('Kết nối internet đã được khôi phục');
    });

    window.addEventListener('offline', () => {
        Toast.warning('Bạn đang offline. Một số tính năng có thể không khả dụng.');
    });

    // Event delegation for notification buttons (must be defined before use)
    function setupNotificationEventDelegation(container) {
        if (!container) return;
        
        // Remove existing listeners by cloning (to avoid duplicates)
        const newContainer = container.cloneNode(true);
        container.parentNode.replaceChild(newContainer, container);
        
        // Mark as read
        newContainer.addEventListener('click', async function(e) {
            const markReadBtn = e.target.closest('.mark-read-btn');
            if (markReadBtn) {
                e.preventDefault();
                e.stopPropagation();
                const id = parseInt(markReadBtn.getAttribute('data-id'));
                if (id) {
                    await markNotificationAsRead(id, markReadBtn);
                }
            }
        });
        
        // Toggle important
        newContainer.addEventListener('click', async function(e) {
            const importantBtn = e.target.closest('.mark-important-btn');
            if (importantBtn) {
                e.preventDefault();
                e.stopPropagation();
                const id = parseInt(importantBtn.getAttribute('data-id'));
                if (id) {
                    await toggleImportant(id, importantBtn);
                }
            }
        });
        
        // Delete notification
        newContainer.addEventListener('click', async function(e) {
            const deleteBtn = e.target.closest('.delete-notification-btn');
            if (deleteBtn) {
                e.preventDefault();
                e.stopPropagation();
                const id = parseInt(deleteBtn.getAttribute('data-id'));
                if (id) {
                    await deleteNotification(id, deleteBtn);
                }
            }
        });
        
        // Quick actions
        newContainer.addEventListener('click', async function(e) {
            const quickActionBtn = e.target.closest('.quick-action-btn');
            if (quickActionBtn) {
                e.preventDefault();
                e.stopPropagation();
                const action = quickActionBtn.getAttribute('data-action');
                const documentId = parseInt(quickActionBtn.getAttribute('data-document-id'));
                const notificationId = parseInt(quickActionBtn.getAttribute('data-notification-id')) || null;
                if (action && documentId) {
                    await quickAction(action, documentId, notificationId);
                }
            }
        });
        
        return newContainer;
    }

    // Notification Dropdown Management
