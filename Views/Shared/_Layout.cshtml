    // Helper function to get CSRF token (defined once, used by all functions)
    function getCSRFToken() {
        // Try to get from hidden input first (most reliable)
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        if (tokenInput && tokenInput.value) {
            return tokenInput.value;
        }
        
        // Try to get from cookie
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }
        
        const cookieToken = getCookie('__RequestVerificationToken');
        if (cookieToken) return cookieToken;
        
        // Try meta tag
        const metaToken = document.querySelector('meta[name="__RequestVerificationToken"]');
        if (metaToken && metaToken.content) {
            return metaToken.content;
        }
        
        return '';
    }

    // Mark notification as read (global function for onclick)
    window.markNotificationAsRead = async function(id, button) {
        try {
            const csrfToken = getCSRFToken();
            
            if (!csrfToken) {
                console.error('CSRF token not found');
                if (typeof Toast !== 'undefined') {
                    Toast.error('Không tìm thấy token bảo mật. Vui lòng tải lại trang.');
                }
                return;
            }
            
            const formData = new FormData();
            formData.append('id', id);
            formData.append('__RequestVerificationToken', csrfToken);
            
            const response = await fetch('/Notifications/MarkAsRead', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': csrfToken
                },
                body: formData
            });
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', response.status, errorText);
                if (typeof Toast !== 'undefined') {
                    Toast.error('Lỗi khi đánh dấu đã đọc');
                }
                return;
            }
            
            const data = await response.json();
            if (data.success) {
                // Update UI
                const item = button.closest('.notification-item');
                if (item) {
                    item.classList.remove('bg-green-50');
                    item.classList.add('bg-white');
                    item.setAttribute('data-read', 'true');
                    
                    // Remove "Mới" badge
                    const badge = item.querySelector('span.bg-green-500');
                    if (badge) badge.remove();
                    
                    // Remove mark-read button
                    button.remove();
                    
                    // Update badge count
                    updateNotificationBadge();
                    
                    if (typeof Toast !== 'undefined') {
                        Toast.success('Đã đánh dấu đã đọc');
                    }
                }
            } else {
                if (typeof Toast !== 'undefined') {
                    Toast.error(data.message || 'Có lỗi xảy ra');
                }
            }
        } catch (error) {
            console.error('Error marking notification as read:', error);
            if (typeof Toast !== 'undefined') {
                Toast.error('Không thể đánh dấu đã đọc');
            }
        }
    }

    // Start auto-refresh notifications
    function startNotificationRefresh() {
        if (notificationRefreshInterval) return;
        notificationRefreshInterval = setInterval(() => {
            if (!notificationDropdown.classList.contains('hidden')) {
                loadNotifications();
                updateNotificationBadge();
            }
        }, 30000); // Every 30 seconds
    }

    // Stop auto-refresh
    function stopNotificationRefresh() {
        if (notificationRefreshInterval) {
            clearInterval(notificationRefreshInterval);
            notificationRefreshInterval = null;
        }
    }

    // Auto-refresh notification badge
    async function updateNotificationBadge() {
        try {
            const response = await fetch('/Notifications/GetUnreadCount', {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });
            
            if (!response.ok) {
                console.error('Error getting unread count:', response.status, response.statusText);
                return;
            }
            
            const data = await response.json();
            const badgeContainer = document.querySelector('#notification-menu');
            if (!badgeContainer) return;
            
            // Remove existing badge
            const existingBadge = badgeContainer.querySelector('span.absolute');
            if (existingBadge) existingBadge.remove();
            
            // Add new badge if count > 0
            if (data.count > 0) {
                const bellButton = badgeContainer.querySelector('#notification-bell');
                if (bellButton) {
                    const badge = document.createElement('span');
                    badge.className = 'absolute -top-1 -right-2 flex h-5 min-w-[20px] items-center justify-center';
                    if (data.count === 1) {
                        badge.innerHTML = '<span class="relative inline-flex items-center justify-center rounded-full h-4 w-4 bg-red-500"></span>';
                    } else {
                        badge.innerHTML = `<span class="relative inline-flex items-center justify-center rounded-full h-5 min-w-[20px] px-1.5 bg-red-500 text-white text-[10px] font-bold">${data.count > 99 ? '99+' : data.count}</span>`;
                    }
                    bellButton.appendChild(badge);
                }
            }
        } catch (error) {
            console.error('Error updating notification badge:', error);
        }
    }

    // Toggle important
    window.toggleImportant = async function(id, button) {
        try {
            const isImportant = button.querySelector('.bi-star-fill') !== null;
            const endpoint = isImportant ? '/Notifications/UnmarkAsImportant' : '/Notifications/MarkAsImportant';
            
            const csrfToken = getCSRFToken();
            
            if (!csrfToken) {
                console.error('CSRF token not found');
                if (typeof Toast !== 'undefined') {
                    Toast.error('Không tìm thấy token bảo mật. Vui lòng tải lại trang.');
                }
                return;
            }
            
            const formData = new FormData();
            formData.append('id', id);
            formData.append('__RequestVerificationToken', csrfToken);
            
            const response = await fetch(endpoint, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': csrfToken
                },
                body: formData
            });
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', response.status, errorText);
                if (typeof Toast !== 'undefined') {
                    Toast.error('Lỗi khi thay đổi trạng thái quan trọng');
                }
                return;
            }
            
            const data = await response.json();
            if (data.success) {
                const item = button.closest('.notification-item');
                if (item) {
                    const isNowImportant = !isImportant;
                    item.setAttribute('data-important', isNowImportant);
                    
                    const icon = button.querySelector('i');
                    if (icon) {
                        if (isNowImportant) {
                            icon.classList.remove('bi-star', 'text-slate-400');
                            icon.classList.add('bi-star-fill', 'text-yellow-600');
                            // Add important badge if not exists
                            const title = item.querySelector('a');
                            if (title && !item.querySelector('.bg-yellow-500')) {
                                const badge = document.createElement('span');
                                badge.className = 'inline-flex items-center px-1.5 py-0.5 rounded-full text-[10px] font-bold bg-yellow-500 text-white';
                                badge.innerHTML = '<i class="bi bi-star-fill text-[8px]"></i> Quan trọng';
                                title.parentElement.appendChild(badge);
                            }
                        } else {
                            icon.classList.remove('bi-star-fill', 'text-yellow-600');
                            icon.classList.add('bi-star', 'text-slate-400');
                            const badge = item.querySelector('.bg-yellow-500');
                            if (badge) badge.remove();
                        }
                    }
                    
                    if (typeof Toast !== 'undefined') {
                        Toast.success(isNowImportant ? 'Đã đánh dấu quan trọng' : 'Đã bỏ đánh dấu quan trọng');
                    }
                }
            } else {
                if (typeof Toast !== 'undefined') {
                    Toast.error(data.message || 'Có lỗi xảy ra');
                }
            }
        } catch (error) {
            console.error('Error toggling important:', error);
            if (typeof Toast !== 'undefined') {
                Toast.error('Không thể thay đổi trạng thái quan trọng');
            }
        }
    };

    // Delete notification
    window.deleteNotification = async function(id, button) {
        if (!confirm('Bạn có chắc muốn xóa thông báo này?')) return;
        
        try {
            const csrfToken = getCSRFToken();
            
            if (!csrfToken) {
                console.error('CSRF token not found');
                if (typeof Toast !== 'undefined') {
                    Toast.error('Không tìm thấy token bảo mật. Vui lòng tải lại trang.');
                }
                return;
            }
            
            const formData = new FormData();
            formData.append('id', id);
            formData.append('__RequestVerificationToken', csrfToken);
            
            const response = await fetch('/Notifications/Delete', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'RequestVerificationToken': csrfToken
                },
                body: formData
            });
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', response.status, errorText);
                if (typeof Toast !== 'undefined') {
                    Toast.error('Lỗi khi xóa thông báo');
                }
                return;
            }
            
            const data = await response.json();
            if (data.success) {
                const item = button.closest('.notification-item');
                if (item) {
                    item.style.transition = 'opacity 0.3s';
                    item.style.opacity = '0';
                    setTimeout(() => {
                        item.remove();
                        updateNotificationBadge();
                        
                        // Check if no notifications left
                        const notificationList = document.querySelector('#notification-list');
                        if (notificationList && notificationList.children.length === 0) {
                            notificationList.innerHTML = `
                                <div class="flex items-center justify-center py-12 text-slate-500">
                                    <div class="text-center">
                                        <i class="bi bi-bell-slash text-4xl mb-3 block text-slate-300"></i>
