@model MNBEMART.Models.SupplierIndexVM
@using System.Linq
@{
    ViewData["Title"] = "Nhà cung cấp";
    var q = Model.Q ?? "";
    
    // Calculate pagination display
    var startItem = (Model.Page - 1) * Model.PageSize + 1;
    var endItem = Math.Min(Model.Page * Model.PageSize, Model.TotalItems);
}

<!-- Tailwind + Bootstrap Icons -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="max-w-[1600px] mx-auto px-6 lg:px-8 py-8">
    <!-- Large Header -->
    @* <div class="mb-6">
        <h1 class="text-4xl font-black text-slate-900 tracking-tight mb-2">
            Nhà cung cấp
        </h1>
        <p class="text-lg text-slate-600">
            Quản lý danh sách nhà cung cấp và thông tin liên hệ
        </p>
    </div> *@

    <!-- Alerts -->
    @if (TempData["Message"] != null)
    {
        <div class="mb-6 px-4 py-3 bg-green-50 border border-green-200 rounded-xl text-green-700 text-sm flex items-center gap-2">
            <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
        </div>
    }

    <!-- Toolbar -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 mb-6 p-6">
        <form method="get" class="flex items-center justify-between gap-4">
            <!-- Search -->
            <div class="flex-1 flex items-center gap-3">
                <div class="relative flex-1 max-w-md">
                    <i class="bi bi-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                    <input name="q" value="@q" 
                           placeholder="Tìm kiếm tên, SĐT, email..."
                           class="w-full pl-10 pr-4 py-3 border-2 border-slate-300 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" />
                </div>
                <button type="button" class="p-3 border-2 border-slate-300 rounded-xl hover:bg-slate-50 transition">
                    <i class="bi bi-funnel text-slate-600"></i>
                </button>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center gap-3">
                <button type="button" data-bs-toggle="modal" data-bs-target="#createModal"
                        class="px-5 py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold rounded-xl shadow-md hover:shadow-lg transition flex items-center gap-2">
                    <i class="bi bi-plus-circle"></i>
                    + Thêm nhà cung cấp mới
                </button>
            </div>
        </form>
    </div>

    <!-- Suppliers Content Container (for AJAX updates) -->
    <div id="suppliers-content">
        <partial name="_SuppliersList" model="Model" />
    </div>
</div>

<!-- Modal includes -->
<partial name="_CreateModal" model="new MNBEMART.Models.Supplier()" />
<partial name="_EditModal" model="new MNBEMART.Models.Supplier()" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Function to re-attach event handlers after AJAX update
        function attachSuppliersEventHandlers() {
        // Action menu toggle
        document.querySelectorAll('.action-menu-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const menu = this.nextElementSibling;
                const isHidden = menu.classList.contains('hidden');
                
                // Close all other menus
                document.querySelectorAll('.action-menu').forEach(m => {
                    if (m !== menu) {
                        m.classList.add('hidden');
                    }
                });
                
                // Toggle current menu
                if (isHidden) {
                    menu.classList.remove('hidden');
                } else {
                    menu.classList.add('hidden');
                }
            });
        });

        // Close menus when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.action-menu-btn') && !e.target.closest('.action-menu')) {
                document.querySelectorAll('.action-menu').forEach(menu => {
                    menu.classList.add('hidden');
                });
            }
        });

        // Select all checkbox
        const selectAll = document.getElementById('selectAll');
        const rowCheckboxes = document.querySelectorAll('.row-checkbox');
        
        if (selectAll) {
            selectAll.addEventListener('change', function() {
                rowCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
            });
        }

        // Update select all when individual checkboxes change
        rowCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const allChecked = Array.from(rowCheckboxes).every(cb => cb.checked);
                const someChecked = Array.from(rowCheckboxes).some(cb => cb.checked);
                
                if (selectAll) {
                    selectAll.checked = allChecked;
                    selectAll.indeterminate = someChecked && !allChecked;
                }
            });
            });

            // Delete button handlers
            document.querySelectorAll('.supplier-delete-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    if (confirm('Bạn có chắc muốn xoá nhà cung cấp này?')) {
                        deleteSupplier(id);
                    }
                });
            });
        }

        // Load edit modal
        async function loadEditModal(id) {
            const res = await fetch(`@Url.Action("GetSupplier", "Suppliers")?id=${id}`);
            if (!res.ok) { alert('Không tải được dữ liệu'); return; }
            const data = await res.json();
            const form = document.querySelector('#editModal form');
            form.querySelector('[name="Id"]').value = data.id;
            form.querySelector('[name="Name"]').value = data.name || '';
            form.querySelector('[name="PhoneNumber"]').value = data.phoneNumber || '';
            form.querySelector('[name="Email"]').value = data.email || '';
            form.querySelector('[name="Address"]').value = data.address || '';
            new bootstrap.Modal(document.getElementById('editModal')).show();
        }

        // Delete supplier via AJAX
        async function deleteSupplier(id) {
            // Get token from any form on the page
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            if (!tokenInput) {
                alert('Không tìm thấy token xác thực. Vui lòng reload trang.');
                return;
            }

            const formData = new FormData();
            formData.append('__RequestVerificationToken', tokenInput.value);
            formData.append('id', id);

            try {
                const response = await fetch('@Url.Action("Delete", "Suppliers")/' + id, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                });

                if (!response.ok) {
                    throw new Error('Lỗi khi xóa nhà cung cấp');
                }

                const html = await response.text();
                document.getElementById('suppliers-content').innerHTML = html;
                attachSuppliersEventHandlers();
            } catch (error) {
                console.error('Error deleting supplier:', error);
                alert('Lỗi khi xóa nhà cung cấp. Vui lòng thử lại.');
            }
        }

        // Create form handler
        document.addEventListener('DOMContentLoaded', function() {
            const createForm = document.querySelector('#createModal form');
            if (createForm) {
                createForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData(createForm);
                    const submitBtn = createForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn ? submitBtn.innerHTML : '';
                    
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Đang lưu...';
                    }

                    try {
                        const response = await fetch('@Url.Action("Create", "Suppliers")', {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                const json = await response.json();
                                if (json.errors) {
                                    // Display validation errors
                                    let errorMsg = 'Vui lòng kiểm tra lại:\n';
                                    for (const [key, errors] of Object.entries(json.errors)) {
                                        errorMsg += errors.join('\n') + '\n';
                                    }
                                    alert(errorMsg);
                                    if (submitBtn) {
                                        submitBtn.disabled = false;
                                        submitBtn.innerHTML = originalText;
                                    }
                                    return;
                                }
                            }
                            throw new Error('Lỗi khi tạo nhà cung cấp');
                        }

                        const html = await response.text();
                        document.getElementById('suppliers-content').innerHTML = html;
                        attachSuppliersEventHandlers();
                        
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                        if (modal) modal.hide();
                        
                        // Reset form
                        createForm.reset();
                    } catch (error) {
                        console.error('Error creating supplier:', error);
                        alert('Lỗi khi tạo nhà cung cấp. Vui lòng thử lại.');
                        if (submitBtn) {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalText;
                        }
                    }
                });
            }

            // Edit form handler
            const editForm = document.querySelector('#editModal form');
            if (editForm) {
                editForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = new FormData(editForm);
                    const submitBtn = editForm.querySelector('button[type="submit"]');
                    const originalText = submitBtn ? submitBtn.innerHTML : '';
                    
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Đang cập nhật...';
                    }

                    try {
                        const response = await fetch('@Url.Action("Edit", "Suppliers")', {
                            method: 'POST',
                            body: formData,
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });

                        if (!response.ok) {
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                const json = await response.json();
                                if (json.errors) {
                                    // Display validation errors
                                    let errorMsg = 'Vui lòng kiểm tra lại:\n';
                                    for (const [key, errors] of Object.entries(json.errors)) {
                                        errorMsg += errors.join('\n') + '\n';
                                    }
                                    alert(errorMsg);
                                    if (submitBtn) {
                                        submitBtn.disabled = false;
                                        submitBtn.innerHTML = originalText;
                                    }
                                    return;
                                }
                            }
                            throw new Error('Lỗi khi cập nhật nhà cung cấp');
                        }

                        const html = await response.text();
                        document.getElementById('suppliers-content').innerHTML = html;
                        attachSuppliersEventHandlers();
                        
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('editModal'));
                        if (modal) modal.hide();
                    } catch (error) {
                        console.error('Error updating supplier:', error);
                        alert('Lỗi khi cập nhật nhà cung cấp. Vui lòng thử lại.');
                        if (submitBtn) {
                            submitBtn.disabled = false;
                            submitBtn.innerHTML = originalText;
                        }
                    }
                });
            }

            // Initial attachment of event handlers
            attachSuppliersEventHandlers();
        });
    </script>
}
