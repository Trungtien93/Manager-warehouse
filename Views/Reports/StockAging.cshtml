@model MNBEMART.ViewModels.StockAgingVM
@{
    ViewData["Title"] = "Báo cáo tồn kho lâu";
    var fastItems = Model.Items.Where(x => x.AgingCategory == "Fast").ToList();
    var normalItems = Model.Items.Where(x => x.AgingCategory == "Normal").ToList();
    var slowItems = Model.Items.Where(x => x.AgingCategory == "Slow").ToList();
    var deadItems = Model.Items.Where(x => x.AgingCategory == "Dead").ToList();
}

<div class="max-w-[1600px] mx-auto px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-black text-slate-900 tracking-tight mb-2">
            <i class="bi bi-hourglass-split text-orange-600 me-2"></i>
            Báo cáo Stock Aging
        </h1>
        <p class="text-slate-600">Phân tích hàng tồn theo thời gian chưa xuất</p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-green-50 border-2 border-green-200 rounded-xl p-4">
            <div class="text-sm font-semibold text-green-700">Fast (&lt;30 ngày)</div>
            <div class="text-3xl font-black text-green-900">@fastItems.Count</div>
        </div>
        <div class="bg-blue-50 border-2 border-blue-200 rounded-xl p-4">
            <div class="text-sm font-semibold text-blue-700">Normal (30-90 ngày)</div>
            <div class="text-3xl font-black text-blue-900">@normalItems.Count</div>
        </div>
        <div class="bg-amber-50 border-2 border-amber-200 rounded-xl p-4">
            <div class="text-sm font-semibold text-amber-700">Slow (90-180 ngày)</div>
            <div class="text-3xl font-black text-amber-900">@slowItems.Count</div>
        </div>
        <div class="bg-red-50 border-2 border-red-200 rounded-xl p-4">
            <div class="text-sm font-semibold text-red-700">Dead (&gt;180 ngày)</div>
            <div class="text-3xl font-black text-red-900">@deadItems.Count</div>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">Mã</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">Tên vật tư</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Tồn kho</th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase">Giá trị</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase">Xuất lần cuối</th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase">Số ngày</th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase">Phân loại</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @foreach (var item in Model.Items)
                    {
                        string rowClass = item.AgingCategory switch
                        {
                            "Fast" => "bg-white hover:bg-green-50",
                            "Normal" => "bg-white hover:bg-blue-50",
                            "Slow" => "bg-amber-50 hover:bg-amber-100",
                            "Dead" => "bg-red-50 hover:bg-red-100",
                            _ => "bg-white hover:bg-slate-50"
                        };

                        string badgeClass = item.AgingCategory switch
                        {
                            "Fast" => "bg-green-100 text-green-800",
                            "Normal" => "bg-blue-100 text-blue-800",
                            "Slow" => "bg-amber-100 text-amber-800",
                            "Dead" => "bg-red-100 text-red-800",
                            _ => "bg-slate-100 text-slate-800"
                        };

                        <tr class="@rowClass transition">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="font-mono text-sm font-semibold text-slate-900">@item.Code</span>
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm font-medium text-slate-900">@item.Name</div>
                                <div class="text-xs text-slate-500">@item.Unit</div>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm font-semibold text-slate-900">@item.CurrentStock.ToString("N2")</span>
                            </td>
                            <td class="px-6 py-4 text-right whitespace-nowrap">
                                <span class="text-sm font-bold text-slate-900">@item.StockValue.ToString("N0")</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
                                @(item.LastIssueDate.HasValue ? item.LastIssueDate.Value.ToString("dd/MM/yyyy") : "Chưa xuất")
                            </td>
                            <td class="px-6 py-4 text-center whitespace-nowrap">
                                <span class="text-sm font-bold text-slate-900">@item.DaysSinceLastIssue</span>
                            </td>
                            <td class="px-6 py-4 text-center whitespace-nowrap">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold @badgeClass">
                                    @item.AgingCategory
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>











