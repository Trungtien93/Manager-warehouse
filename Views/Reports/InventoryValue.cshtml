                                <span class="font-mono text-slate-900">@TrimDec(Model.Sum(x => x.BeginQty), 2)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="font-mono text-slate-900">@FormatMoney(totalBeginValue)</span>
                            </td>
