                                <span class="font-mono text-green-600">@TrimDec(Model.Sum(x => x.InQty), 2)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="font-mono text-green-600">@FormatMoney(totalInValue)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="font-mono text-red-600">@TrimDec(Model.Sum(x => x.OutQty), 2)</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <span class="font-mono text-red-600">@FormatMoney(totalOutValue)</span>
                            </td>
