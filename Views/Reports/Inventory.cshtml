@model List<MNBEMART.ViewModels.InventoryRowVM>
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Tồn kho cuối kỳ";

    dynamic f = ViewBag.Filter;
    DateTime displayFrom = (f?.From as DateTime?)?.Date ?? DateTime.Now.Date.AddDays(-7);
    DateTime displayTo   = (f?.To as DateTime?)?.Date   ?? DateTime.Now.Date;
    int? warehouseId = f?.WarehouseId as int?;

    decimal sumBegin = ViewBag.SumBegin is decimal sb ? sb : Model.Sum(x => x.BeginQty);
    decimal sumIn    = ViewBag.SumIn    is decimal si ? si : Model.Sum(x => x.InQty);
    decimal sumOut   = ViewBag.SumOut   is decimal so ? so : Model.Sum(x => x.OutQty);
    decimal sumEnd   = ViewBag.SumEnd   is decimal se ? se : Model.Sum(x => x.EndQty);

    string TrimDec(decimal v, int maxDecimals = 2) {
        var fmt = "0." + new string('#', maxDecimals);
        return v.ToString(fmt, CultureInfo.InvariantCulture);
    }
}

<!-- Tailwind -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="min-h-screen bg-slate-50 p-6 md:p-8 space-y-6 text-slate-700">

    <!-- HEADER -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
            <h1 class="text-2xl font-bold text-slate-800 flex items-center gap-2">
                <i class="bi bi-box-seam text-blue-600"></i> Tồn kho cuối kỳ
            </h1>
            <p class="text-sm text-slate-500">Theo dõi số lượng đầu kỳ, nhập – xuất và tồn kho cuối kỳ của từng vật tư</p>
        </div>
    </div>

    <!-- FORM LỌC -->
    <form method="get" asp-controller="Reports" asp-action="Inventory"
          class="bg-white border border-slate-200 shadow-sm rounded-xl p-5 grid grid-cols-1 md:grid-cols-4 lg:grid-cols-5 gap-4 items-end">
        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Từ ngày</label>
            <input type="date" name="From" value="@displayFrom:yyyy-MM-dd"
                   class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Đến ngày</label>
            <input type="date" name="To" value="@displayTo:yyyy-MM-dd"
                   class="w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" />
        </div>

        <div>
            <label class="block text-sm font-medium text-slate-600 mb-1">Kho</label>
            @Html.DropDownList(
                "WarehouseId",
                (IEnumerable<SelectListItem>)ViewBag.Warehouses,
                htmlAttributes: new { @class = "w-full border border-slate-300 rounded-lg px-3 py-2 text-sm focus:ring-blue-500 focus:border-blue-500" }
            )
        </div>

        <div class="flex items-end">
            <button class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-medium px-4 py-2 rounded-lg text-sm transition">
                <i class="bi bi-funnel me-1"></i> Xem
            </button>
        </div>
    </form>

    <!-- BẢNG DỮ LIỆU -->
    <div class="bg-white border border-slate-200 shadow-sm rounded-xl p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold text-slate-800 flex items-center gap-2">
                <i class="bi bi-table text-blue-600"></i> Bảng tồn kho
            </h2>
            <div class="text-sm text-slate-500">
                <span class="me-3">Tổng tồn cuối kỳ: <b class="text-blue-600">@TrimDec(sumEnd)</b></span>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full text-sm text-slate-700">
                <thead class="bg-slate-100 text-slate-600 text-xs uppercase">
                    <tr>
                        <th class="px-3 py-2 text-left">Vật tư</th>
                        <th class="px-3 py-2 text-right">Đầu kỳ</th>
                        <th class="px-3 py-2 text-right">Nhập</th>
                        <th class="px-3 py-2 text-right">Xuất</th>
                        <th class="px-3 py-2 text-right">Cuối kỳ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var r in Model)
                    {
                        <tr class="hover:bg-slate-50 transition">
                            <td class="px-3 py-2">@r.MaterialName</td>
                            <td class="px-3 py-2 text-right text-slate-500">@TrimDec(r.BeginQty)</td>
                            <td class="px-3 py-2 text-right text-green-600 font-medium">@TrimDec(r.InQty)</td>
                            <td class="px-3 py-2 text-right text-red-600 font-medium">@TrimDec(r.OutQty)</td>
                            <td class="px-3 py-2 text-right font-semibold text-blue-700">@TrimDec(r.EndQty)</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="bg-slate-100 font-semibold">
                        <td class="px-3 py-2 text-right">Tổng</td>
                        <td class="px-3 py-2 text-right text-slate-600">@TrimDec(sumBegin)</td>
                        <td class="px-3 py-2 text-right text-green-700">@TrimDec(sumIn)</td>
                        <td class="px-3 py-2 text-right text-red-700">@TrimDec(sumOut)</td>
                        <td class="px-3 py-2 text-right text-blue-700">@TrimDec(sumEnd)</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
