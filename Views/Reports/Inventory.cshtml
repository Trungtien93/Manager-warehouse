@model List<MNBEMART.ViewModels.InventoryRowVM>
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Tồn kho cuối kỳ";

    dynamic f = ViewBag.Filter;
    DateTime displayFrom = (f?.From as DateTime?)?.Date ?? DateTime.Now.Date.AddDays(-7);
    DateTime displayTo   = (f?.To as DateTime?)?.Date   ?? DateTime.Now.Date;
    int? warehouseId = f?.WarehouseId as int?;

    decimal sumBegin = ViewBag.SumBegin is decimal sb ? sb : Model.Sum(x => x.BeginQty);
    decimal sumIn    = ViewBag.SumIn    is decimal si ? si : Model.Sum(x => x.InQty);
    decimal sumOut   = ViewBag.SumOut   is decimal so ? so : Model.Sum(x => x.OutQty);
    decimal sumEnd   = ViewBag.SumEnd   is decimal se ? se : Model.Sum(x => x.EndQty);

    string TrimDec(decimal v, int maxDecimals = 2) {
        var fmt = "0." + new string('#', maxDecimals);
        return v.ToString(fmt, CultureInfo.InvariantCulture);
    }
}

<!-- Tailwind -->
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="max-w-[1600px] mx-auto px-6 lg:px-8 py-8">
    <!-- Large Header -->
    @* <div class="mb-6">
        <div class="bg-gradient-to-r from-green-600 to-emerald-600 rounded-2xl shadow-lg p-8 text-white">
            <div class="flex items-center gap-3">
                <div class="bg-white/20 backdrop-blur-sm rounded-xl p-3">
                    <i class="bi bi-box-seam text-3xl"></i>
                </div>
                <div>
                    <h1 class="text-4xl font-black tracking-tight mb-2">
                        Báo cáo tồn kho
                    </h1>
                    <p class="text-green-100 text-lg">Theo dõi số lượng đầu kỳ, nhập – xuất và tồn kho cuối kỳ của từng vật tư</p>
                </div>
            </div>
        </div>
    </div> *@

    <!-- Filter Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 mb-6 p-6">
        <form method="get" asp-controller="Reports" asp-action="Inventory"
              class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-5 gap-4 items-end">
            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                    <i class="bi bi-calendar-event text-green-600"></i>Từ ngày
                </label>
                <input type="date" name="From" value="@displayFrom.ToString("yyyy-MM-dd")"
                       class="w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" />
            </div>

            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                    <i class="bi bi-calendar-check text-green-600"></i>Đến ngày
                </label>
                <input type="date" name="To" value="@displayTo.ToString("yyyy-MM-dd")"
                       class="w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" />
            </div>

            <div>
                <label class="block text-sm font-semibold text-slate-700 mb-2 flex items-center gap-2">
                    <i class="bi bi-building text-green-600"></i>Kho
                </label>
                @Html.DropDownList(
                    "WarehouseId",
                    (IEnumerable<SelectListItem>)ViewBag.Warehouses,
                    "Tất cả kho",
                    htmlAttributes: new { @class = "w-full border-2 border-slate-300 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all shadow-sm hover:border-green-400" }
                )
            </div>

            <div class="flex items-end gap-2">
                <button class="w-full md:w-auto bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-semibold px-5 py-3 rounded-xl text-sm transition-all shadow-md hover:shadow-lg flex items-center gap-2">
                    <i class="bi bi-funnel-fill"></i> Xem
                </button>
                <button type="submit" formaction="/Reports/InventoryExcel"
                        class="w-full md:w-auto bg-gradient-to-r from-emerald-600 to-green-600 hover:from-emerald-700 hover:to-green-700 text-white font-semibold px-4 py-3 rounded-xl text-sm transition-all shadow-md hover:shadow-lg flex items-center gap-2">
                    <i class="bi bi-file-earmark-excel"></i> Excel
                </button>
            </div>
        </form>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
        <div class="bg-gradient-to-br from-slate-500 to-slate-600 border-0 rounded-2xl p-6 shadow-xl text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-slate-100 uppercase tracking-wide mb-2">Đầu kỳ</p>
                    <h4 class="text-4xl font-black">@TrimDec(sumBegin)</h4>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-4">
                    <i class="bi bi-arrow-left-circle text-white text-3xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-gradient-to-br from-green-500 to-emerald-600 border-0 rounded-2xl p-6 shadow-xl text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-green-100 uppercase tracking-wide mb-2">Tổng nhập</p>
                    <h4 class="text-4xl font-black">@TrimDec(sumIn)</h4>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-4">
                    <i class="bi bi-box-arrow-in-down text-white text-3xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-gradient-to-br from-red-500 to-red-600 border-0 rounded-2xl p-6 shadow-xl text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-red-100 uppercase tracking-wide mb-2">Tổng xuất</p>
                    <h4 class="text-4xl font-black">@TrimDec(sumOut)</h4>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-4">
                    <i class="bi bi-box-arrow-up text-white text-3xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-gradient-to-br from-blue-500 to-indigo-600 border-0 rounded-2xl p-6 shadow-xl text-white">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-semibold text-blue-100 uppercase tracking-wide mb-2">Cuối kỳ</p>
                    <h4 class="text-4xl font-black">@TrimDec(sumEnd)</h4>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-4">
                    <i class="bi bi-arrow-right-circle text-white text-3xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Legend -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 mb-6 p-4">
        <div class="flex items-center gap-6 text-sm">
            <span class="font-semibold text-slate-700">Chú thích:</span>
            <div class="flex items-center gap-2">
                <div class="w-4 h-4 bg-red-100 border-l-4 border-red-500 rounded"></div>
                <span class="text-slate-600">Đã hết hạn</span>
            </div>
            <div class="flex items-center gap-2">
                <div class="w-4 h-4 bg-yellow-50 border-l-4 border-yellow-500 rounded"></div>
                <span class="text-slate-600">Sắp hết hạn (≤ 30 ngày)</span>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="bg-white rounded-2xl shadow-lg border border-slate-200 overflow-hidden">
        <div class="p-6 border-b border-slate-200">
            <div class="flex justify-between items-center">
                <h2 class="text-lg font-bold text-slate-800 flex items-center gap-2">
                    <i class="bi bi-table text-green-600"></i> Bảng tồn kho theo lô
                </h2>
                <div class="text-sm text-slate-600 font-medium">
                    <span class="mr-4">Tổng số lô: <b class="text-blue-600">@Model.Count</b></span>
                    <span>Tổng tồn cuối kỳ: <b class="text-blue-600">@TrimDec(sumEnd)</b></span>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto max-h-[600px] relative">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50 sticky top-0 z-10">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                            Vật tư <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                            Kho
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-slate-700 uppercase tracking-wider">
                            Số lô
                        </th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">
                            NSX
                        </th>
                        <th class="px-6 py-4 text-center text-xs font-bold text-slate-700 uppercase tracking-wider">
                            HSD
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                            Đầu kỳ <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                            Nhập <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                            Xuất <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-bold text-slate-700 uppercase tracking-wider cursor-pointer hover:bg-slate-100 transition">
                            Cuối kỳ <i class="bi bi-arrow-down-up text-green-600 ml-1"></i>
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @if (Model.Any())
                    {
                        @foreach (var r in Model)
                        {
                            var expiryStatus = "";
                            var expiryClass = "";
                            if (r.ExpiryDate.HasValue)
                            {
                                var daysLeft = (r.ExpiryDate.Value.Date - DateTime.Now.Date).Days;
                                if (daysLeft < 0)
                                {
                                    expiryStatus = "Đã hết hạn";
                                    expiryClass = "bg-red-50";
                                }
                                else if (daysLeft <= 30)
                                {
                                    expiryStatus = $"Còn {daysLeft} ngày";
                                    expiryClass = "bg-amber-50";
                                }
                            }

                            <tr class="hover:bg-slate-50 transition-colors duration-150 @expiryClass">
                                <td class="px-6 py-4 font-medium text-slate-900">@r.MaterialName</td>
                                <td class="px-6 py-4 text-slate-700">@(r.WarehouseName ?? "-")</td>
                                <td class="px-6 py-4">
                                    @if (!string.IsNullOrEmpty(r.LotNumber))
                                    {
                                        <span class="inline-block px-3 py-1.5 text-xs font-semibold bg-blue-50 text-blue-700 rounded-full border border-blue-200">@r.LotNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-center text-slate-600">
                                    @(r.ManufactureDate.HasValue ? r.ManufactureDate.Value.ToString("dd/MM/yyyy") : "-")
                                </td>
                                <td class="px-6 py-4 text-center">
                                    @if (r.ExpiryDate.HasValue)
                                    {
                                        <div class="flex flex-col items-center gap-1">
                                            <span class="@(expiryStatus == "Đã hết hạn" ? "text-red-700 font-bold" : expiryStatus.StartsWith("Còn") ? "text-amber-700 font-semibold" : "text-slate-600")">@r.ExpiryDate.Value.ToString("dd/MM/yyyy")</span>
                                            @if (!string.IsNullOrEmpty(expiryStatus))
                                            {
                                                <span class="text-xs @(expiryStatus == "Đã hết hạn" ? "text-red-700 font-bold" : "text-amber-700 font-semibold")">(@expiryStatus)</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right font-semibold text-slate-700">@TrimDec(r.BeginQty)</td>
                                <td class="px-6 py-4 text-right font-bold text-green-600">@TrimDec(r.InQty)</td>
                                <td class="px-6 py-4 text-right font-bold text-red-600">@TrimDec(r.OutQty)</td>
                                <td class="px-6 py-4 text-right font-bold text-blue-600">@TrimDec(r.EndQty)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <i class="bi bi-inbox text-4xl text-slate-300 mb-3"></i>
                                    <p class="text-slate-500 font-medium">Không có dữ liệu</p>
                                    <p class="text-sm text-slate-400 mt-1">Thử thay đổi bộ lọc</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                @if (Model.Any())
                {
                    <tfoot class="bg-gradient-to-r from-slate-50 to-slate-100 border-t-2 border-slate-200">
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-right font-bold text-slate-900">Tổng</td>
                            <td class="px-6 py-4 text-right font-bold text-slate-700">@TrimDec(sumBegin)</td>
                            <td class="px-6 py-4 text-right font-bold text-green-600 text-lg">@TrimDec(sumIn)</td>
                            <td class="px-6 py-4 text-right font-bold text-red-600 text-lg">@TrimDec(sumOut)</td>
                            <td class="px-6 py-4 text-right font-bold text-blue-600 text-lg">@TrimDec(sumEnd)</td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>
