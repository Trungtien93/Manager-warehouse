@model MNBEMART.Models.Material
@{
    ViewData["Title"] = "Xoá nguyên liệu";
}

<h2>Xác nhận xoá</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã</dt>
            <dd class="col-sm-9">@Model.Code</dd>

            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Đơn vị</dt>
            <dd class="col-sm-9">@Model.Unit</dd>

            <dt class="col-sm-3">Nhà cung cấp</dt>
            <dd class="col-sm-9">@Model.Supplier?.Name</dd>

            <dt class="col-sm-3">Hình</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" style="height:80px" />
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
<div class="mt-4">
    <h3>Thông tin hệ thống</h3>
    <p>Phiên bản: 1.0.0</p>
    <p>Ngày cập nhật: 01/08/2025</p>